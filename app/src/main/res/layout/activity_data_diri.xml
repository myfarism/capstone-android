<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.DataDiriActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="15dp"
            android:text="Profil"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/profileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginStart="135dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            app:civ_border_color="#789395"
            app:civ_border_width="5dp" />

        <ImageView
            android:id="@+id/imageVieww"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="94dp"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/editIcon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="98dp"
            android:src="@drawable/baseline_edit_24"
            android:tint="@color/green"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Edit Icon" />

    </FrameLayout>


    <ImageView
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:src="@drawable/baseline_person_24_green"
        android:layout_marginTop="325dp"
        android:layout_marginStart="48dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="328dp"
        android:layout_marginStart="88dp"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordEditTextLayout"
        android:layout_width="301dp"
        android:layout_height="54dp"
        android:layout_marginTop="372dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/edit_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Namamu"
            android:textStyle="italic" />
    </com.google.android.material.textfield.TextInputLayout>

    <FrameLayout
        android:id="@+id/framebutton"
        android:layout_width="301dp"
        android:layout_height="54dp"
        android:layout_marginTop="540dp"
        android:layout_marginStart="50dp"
        app:layout_constraintVertical_bias="0.099">

        <ImageButton
            android:id="@+id/button_masuk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_green"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Simpan"
            android:textStyle="bold"
            android:textSize="15sp"

            android:textColor="@android:color/black" />
    </FrameLayout>


</FrameLayout>